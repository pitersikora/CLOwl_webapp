@model ClowlWebApp.Entities.Content

<body>
    <form>
        <div class="d-flex" id="wrapper">
            <div class="bg-light border-info" id="sidebar-wrapper">
                <div class="list-group list-group-flush">
                    @foreach (var element in ViewBag.categoryItems)
                    {
                        <a href="/Content?CategoryItemId=@element.Id" class="list-group-item list-group-item-action bg-light">@element.Title</a>
                    }
                </div>
            </div>
            <div class="container body-content">
                <h2>@Model.Title</h2>

                @if (Model.HTMLContent != null)
                {
                    <div class="row">
                        <div id="TextContent" class="mt-3 col-md-10">
                            @Html.Raw(Model.HTMLContent)
                        </div>
                    </div>
                }
                @if (Model.VideoLink != null)
                {
                    <div class="row">
                        <div class="mt-3 col-md-10">
                            <div id="VideoContent" class="video-container mt-3">
                                <iframe width="550" height="350" src="@Model.VideoLink" allowfullscreen="" frameborder="0">
                                </iframe>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </form>
</body>
